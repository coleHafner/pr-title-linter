{
  "name": "pr-title-linter",
  "version": "1.0.0",
  "description": "Enforces commit-lint on the title of your GitHub PR",
  "author": "Cole Hafner <colehafner@gmail.com> (https://colehafner.com)",
  "license": "ISC",
  "repository": "https://github.com//pr-title-linter.git",
  "homepage": "https://github.com//pr-title-linter",
  "bugs": "https://github.com//pr-title-linter/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^12.2.8"
  },
  "devDependencies": {
    "jest": "^24.0.0",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
